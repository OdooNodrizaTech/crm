<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="crm_case_claims_tree_view">
        <field name="name">CRM - Claims Tree</field>
        <field name="model">crm.claim</field>
        <field name="arch" type="xml">
            <tree string="Reclamaciones">
                <field name="code"/>
                <field name="date"/>                
                <field name="stage_id"/>
                <field name="org_id"/>
                <field name="carrier_id"/>
                <field name="model_ref_id"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="crm_case_claims_form_view">
        <field name="name">CRM - Claims Form</field>
        <field name="model">crm.claim</field>
        <field name="arch" type="xml">
            <form string="Reclamacion">
                <header>
                    <field name="stage_id" widget="statusbar" clickable="True"/>
                </header>
                <sheet string="Reclamaciones">
                    <group>
                        <field name="code" attrs="{'readonly': True}"/>
                        <field name="org_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="org_other_show" invisible="1" />                        
                        <field name="org_other" attrs="{'invisible':[('org_other_show', '=', False)]}" />
                        <field name="date"/>
                        <field name="active" string="Activo" />
                    </group>
                    <group colspan="4" col="4">
                        <notebook>
                            <page string="Descripcion de reclamacion">
                                <group colspan="2" col="2" groups="base.group_user">
                                    <separator colspan="2" string="Referencia" />                                    
                                    <field name="model_ref_id" widget="reference" string="Origen" />
                                    <field name="carrier_id" string="Transportista" attrs="{'readonly': True}" />
                                    <field name="partner_id" string="Contacto" attrs="{'readonly': True}" />
                                    <field name="user_id" string="Reportado por" attrs="{'readonly': True}"/>
                                </group>                                                                
                                <separator colspan="4" string="Causas iniciales y descripcion de la reclamacion" groups="base.group_user"/>
                                <field name="description" colspan="4" nolabel="1"/>
                            </page>
                            <page string="Seguimiento" groups="base.group_user">
                                <group colspan="2" col="2" groups="base.group_user">
                                    <separator colspan="2" string="Acciones de resolucion"/>
                                    <field name="resolution" colspan="2" nolabel="1"/>
                                    <field name="order_id" attrs="{'readonly': True}"/>
                                    <field name="date_closed"/>                         
                                </group>                                                                       
                            </page>
                            <page string="Calidad" groups="base.group_user">
                                <group colspan="4" col="4" groups="base.group_user">
                                    <separator colspan="4" string="Observaciones calidad"/>
                                    <field name="quality_observations" colspan="4" nolabel="1"/>
                                    <label for="corrective_action" string="Es necesario una accion correctiva?" colspan="2"/>
                                    <div colspan="2">
                                        <field name="corrective_action"/>
                                    </div>
                                    <field name="categ_id"/>
                                </group>                                                                
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>    
    <record id="view_crm_case_claims_filter" model="ir.ui.view">
        <field name="name">CRM - Claims Search</field>
        <field name="model">crm.claim</field>
        <field name="arch" type="xml">
            <search string="Buscar reclamaciones">
                <filter string="Reclamaciones sin asignar" domain="[('user_id','=', False)]" />
                <filter string="Nuevo" domain="[('stage_id','=', 1)]"/>
                <filter string="En proceso" domain="[('stage_id','=', 2)]"/>
                <filter string="Resuelto" domain="[('stage_id','=', 3)]"/>
                <filter string="Rechazado" domain="[('stage_id','=', 4)]"/>
                <field name="partner_id" filter_domain="[('partner_id','child_of',self)]"/>
                <field name="user_id"/>
                <filter string="Mis reclamaciones" domain="[('user_id','=',uid)]" name="my_crm_claims_filter"/>
                <group expand="0" name="claims" string="Group By">
                    <filter string="Partner" domain="[]" help="Partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Responsible" domain="[]" help="Responsible User" context="{'group_by':'user_id'}"/>
                    <filter string="Stage" domain="[]" context="{'group_by':'stage_id'}"/>
                    <filter string="Claim Month" domain="[]" help="Claim Date by Month" context="{'group_by':'date'}"/>
                    <filter string="Closure" domain="[]" help="Date Closed" context="{'group_by':'date_closed'}"  groups="base.group_no_one" invisible="1"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="crm_claim_category_claim0">
        <field name="name">Reclamaciones</field>
        <field name="res_model">crm.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="crm_case_claims_tree_view"/>
        <field name="context">{"search_default_user_id":uid, "stage_type":'claim'}</field>
        <field name="search_view_id" ref="crm_claim.view_crm_case_claims_filter"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Registre y rastree las reclamaciones de sus clientes. Las reclamaciones pueden estar vinculadas a una orden de venta o a un lote. Puede enviar correos electronicos con archivos adjuntos y mantener el historial completo de una reclamaciones (correos electronicos enviados, tipo de intervencion, etc.). Las reclamaciones pueden vincularse automaticamente a una direccion de correo electronico.</p>
        </field>
    </record>
    <record model="ir.actions.act_window.view" id="action_crm_tag_tree_claim0">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="crm_case_claims_tree_view"/>
        <field name="act_window_id" ref="crm_claim_category_claim0"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_crm_tag_form_claim0">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="crm_case_claims_form_view"/>
        <field name="act_window_id" ref="crm_claim_category_claim0"/>
    </record>    
</odoo>