<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <record id="crm_activity_objective_crm_activity_log_view_form" model="ir.ui.view">
        <field name="name">crm_activity_objective_crm_activity_log_view_form</field>
        <field name="model">crm.activity.log</field>
        <field name="inherit_id" ref="crm.crm_activity_log_view_form" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="date_deadline" position="after">
                <field name="date_action_override" string="Fecha actividad" />
                <field name="duration" widget="float_time" />
            </field>
            <field name="next_activity_id" position="after">
                <field name="activity_objective_id" options="{'no_create': True, 'no_open': True}" />                                
            </field>                                                
        </field>
    </record>
    <record id="crm_activity_objective_crm_activity_log_view_form_schedule" model="ir.ui.view">
        <field name="name">crm_activity_objective_crm_activity_log_view_form_schedule</field>
        <field name="model">crm.activity.log</field>
        <field name="inherit_id" ref="crm.crm_activity_log_view_form_schedule" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="next_activity_id" position="after">
                <field name="activity_objective_id" options="{'no_create': True, 'no_open': True}" />
            </field>                                                
        </field>
    </record>    
    <record id="crm_lead_activity_report_action_tree" model="ir.actions.act_window">
        <field name="name">Actividades</field>
        <field name="res_model">crm.activity.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="domain">[('lead_id', '=', active_id)]</field>
    </record>
