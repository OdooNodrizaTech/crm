<?xml version="1.0" encoding="utf-8"?>
<odoo>       
    <record id="crm_activity_objective_crm_lead_view_tree_activity" model="ir.ui.view">
        <field name="name">crm_activity_objective_crm_lead_view_tree_activity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_tree_activity" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="next_activity_id" position="after">
                <field name="next_activity_objective_id"/>
            </field>                                                            
        </field>
    </record>    
    <record id="crm_activity_objective_crm_case_form_view_oppor" model="ir.ui.view">
        <field name="name">crm_activity_objective_crm_case_form_view_oppor</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="next_activity_id" position="after">
                <field name="next_activity_objective_id" options="{'no_create': True, 'no_open': True}" />                                                                
            </field>                                                            
        </field>
    </record>    
    <record id="crm_activity_objective_crm_case_tree_view_leads" model="ir.ui.view">
        <field name="name">crm_activity_objective_crm_case_tree_view_leads</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="next_activity_objective_id" />                
            </field>                                                            
        </field>
    </record>        
    <record id="crm_activity_objective_crm_case_form_view_leads" model="ir.ui.view">
        <field name="name">crm_activity_objective_crm_case_form_view_leads</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="priority" eval="90"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]//group[4]" position="after">
                <group>
                    <label for="next_activity_id"/>
                    <div>
                        <div class="o_row mr16">
                            <field name="next_activity_objective_id" options="{'no_create': True, 'no_open': True}" />
                        </div>                        
                    </div>
                </group>                                                
            </xpath>                                                
        </field>
    </record>                                                
</odoo>