<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_activity_objective_tree_form" model="ir.ui.view">
        <field name="name">Objetivo de actividad</field>
        <field name="model">crm.activity.objective</field>
        <field name="arch" type="xml">
            <form string="Objetivo de actividad">
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name"/></h1>
                </div>
                <group>                                    
                    <group>
                        <field name="objective_type"/>
                        <field name="probability"/>
                        <field name="crm_activity_ids" widget="many2many_tags"/>
                    </group>
                </group>                
            </form>
        </field>
    </record>
    <record id="crm_activity_objective_tree" model="ir.ui.view">
        <field name="name">Objetivos de actividades</field>
        <field name="model">crm.activity.objective</field>            
        <field name="arch" type="xml">
            <tree string="Objetivos de actividades">
                <field name="name"/>
                <field name="probability"/>
            </tree>
        </field>            
    </record>
    <record model="ir.actions.act_window" id="crm_activity_objective_action">
        <field name="name">Objetivos de actividades</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.activity.objective</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="crm_activity_objective_tree"/>
    </record>             
    <menuitem 
        action="crm_activity_objective_action" 
        name="Objetivos de actividades"
        id="crm_activity_objective_action_item" 
        parent="sales_team.menu_sale_config"
        sequence="30"
    />                    
</odoo>